{
  "name": "@anchor-chat/anchor-api",
  "version": "1.0.1",
  "description": "A package that allows you to communicate with the Anchor Chat",
  "main": "dist/node/index.js",
  "types": "dist/node/index.d.ts",
  "scripts": {
    "dist": "npm run build && npm run bundle && npm run docs",
    "build": "mkdir -p dist/node && tsc",
    "bundle": "mkdir -p dist/browser && browserify src/index.ts -p [ tsify ] -d | exorcist dist/browser/anchor-api.js.map > dist/browser/anchor-api.js && uglifyjs dist/browser/anchor-api.js --source-map \"filename='dist/browser/anchor-api.map.js',url='anchor-api.min.js.map'\" -m -c -o dist/browser/anchor-api.min.js",
    "docs": "mkdir -p dist/docs && typedoc --out dist/docs --mode modules ./src/",
    "test": "npm run build && mocha --timeout 200000",
    "prepare": "require-self"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Anchor-Chat/AnchorAPI.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "anchor",
    "chat",
    "api"
  ],
  "author": "lukas2005",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Anchor-Chat/AnchorAPI/issues"
  },
  "homepage": "https://github.com/Anchor-Chat/AnchorAPI#readme",
  "devDependencies": {
    "@types/node": "^10.12.9",
    "browserify": "^16.2.3",
    "exorcist": "^1.0.1",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "require-self": "^0.2.1",
    "ts-node": "^7.0.1",
    "tsify": "^4.0.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6",
    "rimraf": "^2.6.2",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "@types/crypto-js": "^3.1.43",
    "@types/ipfs": "git+https://github.com/lukas2005/types-ipfs.git",
    "@types/orbit-db": "git+https://github.com/lukas2005/orbit-db-types.git",
    "crypto-js": "^3.1.9-1",
    "ipfs": "^0.32.3",
    "orbit-db": "^0.19.9",
    "uuid": "^3.3.2"
  }
}
